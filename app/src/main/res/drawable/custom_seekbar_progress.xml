<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Background color of the track -->
            <corners android:radius="8dp" /> <!-- Adjust the radius to control the corner roundness -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#920E2E43" /> <!-- Progress color -->
                <corners android:radius="8dp" /> <!-- Adjust the radius to control the corner roundness -->
            </shape>
        </clip>
    </item>
</layer-list>
